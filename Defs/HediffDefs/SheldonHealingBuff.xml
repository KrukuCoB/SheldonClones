<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	
  <HediffDef>
    <defName>SheldonKittenSongHealing</defName>
    <label>эффект песни о котенке</label>
    <description>Этот персонаж получил моральную поддержку через песню о пушистом котенке, что ускоряет его выздоровление.</description>
    <hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(0.8, 1.0, 0.8)</defaultLabelColor>
    <isBad>false</isBad>
    <maxSeverity>1.0</maxSeverity>
    <initialSeverity>1.0</initialSeverity>
    <stages>
      <li>
        <minSeverity>0.01</minSeverity>
        <label>воодушевлен песней</label>
        <statOffsets>
          <InjuryHealingFactor>0.1</InjuryHealingFactor>
          <ImmunityGainSpeedFactor>0.05</ImmunityGainSpeedFactor>
        </statOffsets>
      </li>
    </stages>
    <comps>
      <li Class="HediffCompProperties_Disappears">
        <disappearsAfterTicks>15000~30000</disappearsAfterTicks> <!-- 6-12 игровых часов -->
		<showRemainingTime>true</showRemainingTime>
      </li>
    </comps>
  </HediffDef>

</Defs>

